# A sample Gemfile
source "https://rubygems.org"

gem 'sinatra'
gem 'thin'
gem 'require_all'
gem 'rake'
gem 'activerecord', '4.2.5'
gem 'sinatra-activerecord'
# Added `rake`, `activerecord`, and `sinatra-activerecord`

group :development do
	gem 'shotgun'
	gem 'pry'
  gem 'tux'
  gem 'sqlite3'
end
# Added `tux` and `sqlite3`
    
group :test do
  gem 'rspec'
  gem 'capybara'
  gem 'rack-test'
end