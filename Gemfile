# A sample Gemfile
source "https://rubygems.org"

gem 'sinatra'
gem 'activerecord', '4.2.5' # Gives us access to magical db mapping and association powers
gem 'sinatra-activerecord' # Gives us access to Rake tasks
gem 'rake' # "ruby make" package that lets us quickly create files, folders, and automate tasks like db creation
gem 'thin'
gem 'require_all'


group :development do
	gem 'shotgun'
	gem 'pry'
	gem 'sqlite3'
	gem 'tux'
end

group :test do
  gem 'rspec'
  gem 'capybara'
  gem 'rack-test'
end
